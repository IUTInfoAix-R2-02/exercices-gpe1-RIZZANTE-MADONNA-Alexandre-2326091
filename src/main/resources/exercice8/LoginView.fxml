<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:controller="fr.amu.iut.exercice8.LoginControl"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="exercice8/Login.css" styleClass="root">
   <padding>
      <Insets bottom="10"/>
   </padding>
   <GridPane alignment="CENTER" hgap="100" vgap="20"
                                xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
       <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

       <Label text="User Id:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

       <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

   <!--   à compléter par un TextField et un Label -->

      <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

      <PasswordField fx:id="pwd" GridPane.columnIndex="1" GridPane.rowIndex="2" />

   <!--  à compléter pour les boutons -->

      <columnConstraints>
         <ColumnConstraints maxWidth="103.0" minWidth="63.0" prefWidth="83.0" />
         <ColumnConstraints maxWidth="143.0" minWidth="103.0" prefWidth="123.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </padding>
   </GridPane>
   <HBox alignment="CENTER" spacing="20">
      <Button fx:id="okButton" text="Ok" onAction="#okClicked" minWidth="40"></Button>
      <Button fx:id="cancelButton" text="Cancel" onAction="#cancelClicked" minWidth="70"></Button>
   </HBox>

</VBox>